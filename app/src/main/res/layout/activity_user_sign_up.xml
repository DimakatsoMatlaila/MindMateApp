<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:background="@drawable/logo2"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/usignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/Usemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/anonyUsername"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background"
            android:color="@color/black"
            android:drawableLeft="@android:drawable/sym_action_email"
            android:drawablePadding="20dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />
        <EditText
            android:id="@+id/anonyUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background"
            android:layout_below="@id/usignup"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:color="@color/black"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="20dp"
            android:hint="Anonymous username"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"
            android:layout_below="@id/crtpasswordU"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Needs help in:" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="390dp"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background"
            android:layout_marginTop="15dp"
            android:layout_below="@id/desc">


            <RadioButton
                android:id="@+id/prob2u"
                android:layout_width="wrap_content"
                android:background="#1111"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Alcohol / Other Drugs/ Anger Management" />


            <RadioButton
                android:id="@+id/prob4u"
                android:layout_width="wrap_content"
                android:background="#1111"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Anxiety / Stress/ Depression" />


            <RadioButton
                android:id="@+id/prob6u"
                android:layout_width="wrap_content"
                android:background="#1111"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Self-Esteem" />

            <RadioButton
                android:id="@+id/prob7u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1111"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="Grief and Loss" />

        </RadioGroup>


        <EditText
            android:id="@+id/LogPasswordU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Usemail"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background"
            android:color="@color/white"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/crtpasswordU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LogPasswordU"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background"
            android:color="@color/white"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:drawablePadding="20dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="20dp"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/signupbtnU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/white"
            android:padding="5dp"
            android:text="create account"
            android:textColor="@color/white" />

    </RelativeLayout>
</ScrollView>
